generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  Credential Credentials[]
  Notes      SafeNote[]
  Cards      Card[]

  @@map("user")
}

model Credentials {
  id       Int    @id @default(autoincrement())
  title    String
  url      String
  username String
  password String

  User User @relation(fields: [userId], references: [id])

  userId Int

  @@unique([userId, title])
  @@map("credential")
}

model SafeNote {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(50)
  text      String   @db.VarChar(1000)
  userId    Int
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("safenotes")
}

model Card {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(50)
  cardNumber     String
  cardName       String
  CardCVV        String
  CardExpiration String
  CardPassword   String
  isVirtual      Boolean
  type           CardType
  userId         Int
  createdAt      DateTime @default(now())
  User           User     @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("cards")
}

enum CardType {
  credit
  debit
  both

  @@map("cardType")
}
